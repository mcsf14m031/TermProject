                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">Lahore AD Market</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="~/Home/Index">Home</a></li>
                    <li><a href="~/Home/Services">Services</a></li>
                    <li><a href="~/Home/About_Us">About Us</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Account/Login"><span class="glyphicon glyphicon-user"></span>My Account</a></li>
                    <li><a href="/Home/Signout"><span class="glyphicon glyphicon-log-in"></span>Sign out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- navigation -->

