@model TermProject.Models.user

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "LAM";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <title></title>
        <style>
            html, body {
                background-image: url('/Images/1.jpg');
            }
            .heading {
                padding-top:50px;
                margin-left:50%;
                
                color:azure;
            }
            .form-horizontal {
                padding-top:30px;
                margin-left:50%;
            }
    </style>
        <script>
            $(document).ready(function () {
                $("#submit").click(function (e) {
                    var p1 = ($("#pass").val())
                    var p2 = ($("#confirmpass").val())
                    if (p1 != p2) {
                        e.preventDefault();
                        alert("Passwords do not match");
                    }
                    if (p1 < 5 || p2 < 5) {
                        e.preventDefault();
                        alert("Password too short");
                    }
                    if ($("#fname").val() == "")
                        alert("Enter First Name");
                    else if ($("#lname").val() == "")
                        alert("Enter Last Name");
                    else if ($("#email").val() == "")
                        alert("Enter Email");
                    else if ($("#pass").val() == "")
                        alert("Enter Password");
                    else if ($("#confirmpass").val() == "")
                        alert("Enter Confirm Password");
                    else if($("#confirmpass").val()!=("#pass").val())
                        alert("Passwords do not match ");
                    else if ($("#date").val == "")
                        alert("Enter Date of Birth: ");
                });
            });
        </script>
    </head>
    <body>         
        <!-- Start Sign Up-->
        <h2 class="heading">Sign Up Form</h2>
        <form class="form-horizontal" role="form" action="/Account/AddUser" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="fname">First Name:</label>
                <div class="col-sm-6">
                    <input id="fname" type="text" class="form-control" name="fname" placeholder="Enter FName" required="required">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="lname">Last Name:</label>
                <div class="col-sm-6">
                    <input id="lname" type="text" class="form-control" name="lname" placeholder="Last Name" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="Uname">User Name:</label>
                <div class="col-sm-6">
                    <div class="editor-field">
                        @Html.EditorFor( @Model =>Model.UName)
                    </div>
                    @Html.ValidationMessageFor(@Model => Model.UName)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-6">
                    <input type="email" class="form-control" name="email" placeholder="Enter email" required="required">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-6">
                    <input id="pass" type="password" class="form-control" name="pwd" placeholder="Enter Password" required="required">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd2">Confirm Password:</label>
                <div class="col-sm-6"> 
                  <input id="confirmpass" type="password" class="form-control" name="pwd2" placeholder="Confirm password" required="required">
                </div>
            </div>
            <div class="mydropdown">
            <label><b> &nbsp &nbsp &nbsp &nbsp  Gender : &nbsp&nbsp&nbsp&nbsp</b></label>
            <select name="gender" id="gender" required="required">
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
            <br />
            <div class="form-group">
                <label class="control-label col-sm-2" for="address">Address:</label>
                <div class="col-sm-6"> 
                  <input type="text" class="form-control" name="address" placeholder="Enter Your Address" required="required">
                </div>
            </div>
            <div class="form-group">
            <label for="uploadImg" class="col-sm-2 control-label">Upload Image: </label>
            <div class="col-sm-6">
                <input type="file" name="file" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
                <br />
                <div class="checkbox-inline">
                    <label>
                        <input required="required" type="checkbox"><h4>By Clicking Submit you agree with Rules and Regulations</h4>
                    </label>
                </div>
                <br />
                <br />
                </div>
        </div>
            <div class="form-group"> 
                    <div class="col-sm-offset-2 col-sm-10">
                        <a href="#"><button id="submit" type="submit" class="btn btn-default"> Submit</button></a>
                        <a href="~/Home/Index" class="btn btn-warning" role="button">Cancel</a>
                </div>
            </div>
        </form>
        <!-- End Sign Up-->
    </body>
</html>
