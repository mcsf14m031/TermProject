    <h1 class="heading">Submit an Ad</h1>
    <form class="form-horizontal" role="form" method="post" action="/AD/EditPostedAd/@Model.Id" enctype="multipart/form-data">
        <div class="form-group">
            <label class="control-label col-sm-2" for="adTitle">Ad Title* :</label>
            <div class="col-sm-6">
                <input id="adtitle" type="text" class="form-control" name="adTitle" value="@Model.AdTitle" required="required">
            </div>
            @*<div class="col-sm-6">
                <input id="uId" type="hidden" class="form-control" name="userId"  value="@Model.Id">
            </div>*@
        </div>
        <!--Category View-->
        <div class="mydropdown">
            <label><b>category*: &nbsp&nbsp&nbsp&nbsp</b></label>
            <select name="category" id="category" required="required">
                <option value="Misc">Select Category</option>
                <option value="Electronics">Electronics</option>
                <option value="Mobile">Mobile</option>
                <option value="Cars">Cars</option>
                <option value="Bikes">Bikes</option>
                <option value="Fashion">Fashion</option>
                <option value="Sports">Sports</option>
                <option value="Education">Education</option>
            </select>
        </div>
        <!--Category View -->
        <br />
        <label class="control-label col-sm-2" for="adDes">Ad Description* : </label>
        <textarea class="input-xxlarge" name="description" rows="8" cols="70" id="description" required="required" @Model.Description></textarea><br />
        <br />
        <div class="form-group">
            <label class="control-label col-sm-2" for="Name">Name* :</label>
            <div class="col-sm-6">
                <input id="adname" type="text" class="form-control" name="adname" value="@Model.Name" required="required">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Phone">Phone* : </label>
            <div class="col-sm-6">
                <input id="phone" type="number" class="form-control" name="adphone" value="@Model.Phone" required="required">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Price">Price* : </label>
            <div class="col-sm-6">
                <input id="price" type="text" class="form-control" name="adprice" value="@Model.Price" required="required">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="address">Address* : </label>
            <div class="col-sm-6">
                <input id="address" type="text" class="form-control" name="address" value="@Model.Address" required="required">
            </div>
        </div>

        <div class="form-group">
            <label for="uploadImg" class="col-sm-2 control-label">Upload Image: </label>
            <div class="col-sm-6">
                <input type="file" name="file" required="required">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <br />
                <div class="checkbox-inline">
                    <label>
                        <input type="checkbox" required="required"><h4>By Clicking Submit you agree with Rules and Regulations</h4>
                    </label>
                </div>
                <br />
                <br />
                <input id="submit" type="submit" value="Submit Ad"/>
                <a href="~/Views/Ad/ViewAd" class="btn btn-info" role="button">Cancel</a>
            </div>
        </div>
    </form>
