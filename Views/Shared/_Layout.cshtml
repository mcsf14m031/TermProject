<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrapcss")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <style>
        .footer {
            position:absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100px;
            /*position:fixed;
                bottom:0;
                width:100%;
                /*height:60px;*/ /* Height of the footer */
        }

        .ftr {
            background-color: cadetblue;
        }

            .ftr address, .ftr a, .ftr p {
                color: #fff;
            }

        .ft_space {
            padding: 0 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse ">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">Lahore AD Market</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="~/Home/Index">Home</a></li>
                    <li><a href="~/Home/Services">Services</a></li>
                    <li><a href="~/Home/About_Us">About Us</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Account/Register"><span class="glyphicon glyphicon-user"></span>Sign Up</a></li>
                    <li><a href="~/Account/Login"><span class="glyphicon glyphicon-log-in"></span>Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Start Footer -->
    <div class="ftr">
        <div class="container">
            <div class="row">
                <footer>
                    <div class="pull-left ft_space">
                        <address>
                            <h3>Lahore AD Market Inc.</h3>
                            PUCIT Lahore<br>
                            54000<br>
                            <a href="mailto: lahoreAdmarket@market.com">lahoreadmarket@market.com</a><br>
                            <abbr title="Phone">P:</abbr>906 123-4567
                        </address>
                    </div>
                    <div class="pull-right ft_space">
                        <img class="img-responsive" src="~/Images/Logo.png" />
                        <p>&copy; Lahore AD Market Inc. 2015</p>
                    </div>
                    @*<a href="~/Admin/all"><button " type="submit" class="btn btn-default">Admin Panel</button></a>*@
                </footer>
            </div>
        </div>
    </div>
    <!--Foooter End -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @RenderSection("scripts", required: false)
</body>
</html>
